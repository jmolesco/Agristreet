{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "^@"
        ]
      }
    ],
    "linebreak-style": 0,
    "radix": 0,
    "camelcase": "off",
    "max-len": "off"
  }
}